datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
  url      = env("postgresql://postgres:justifyTextApi@justifytextapi.cnbx6dscbold.eu-west-3.rds.amazonaws.com:5432/mydb?schema=public")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  name        String?
  password    String
  wordCounter WordCounter?
}

model WordCounter {
  id               String   @id @default(cuid())
  wordCount        Int      @default(0)
  lastestQueryDate DateTime @default(now())
  author           User     @relation(fields: [authorId], references: [id])
  authorId         String
}
